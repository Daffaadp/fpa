<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardController">
   <children>
      <Label fx:id="welcomeLabel" layoutX="50.0" layoutY="30.0" text="Welcome!">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      
      <Label layoutX="50.0" layoutY="70.0" text="User Database:" />
      <TextArea fx:id="usersTextArea" editable="false" layoutX="50.0" layoutY="90.0" prefHeight="300.0" prefWidth="500.0" />
      
      <Button fx:id="refreshButton" layoutX="50.0" layoutY="410.0" onAction="#handleRefresh" prefWidth="100.0" text="Refresh" />
      <Button fx:id="logoutButton" layoutX="450.0" layoutY="410.0" onAction="#handleLogout" prefWidth="100.0" text="Logout" />
   </children>
</AnchorPane>