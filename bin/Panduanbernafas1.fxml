<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<fx:root style="-fx-background-color: #A3D5FF;" type="BorderPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LaperController2">
   <left>
      <!-- Navbar -->
      <VBox prefWidth="280.0">
         <children>
            <!-- Header Section -->
            <VBox style="-fx-background-color: #4169e1; -fx-padding: 20;">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label style="-fx-text-fill: white; -fx-font-size: 24px;" text="🍽️📱" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="LAPER" />
                     </children>
                  </HBox>
                  <Label style="-fx-text-fill: #4169e1; -fx-font-size: 14px;" text="Mental Health Companion">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            
            <!-- Navigation Menu -->
            <VBox style="-fx-background-color: #4169e1; -fx-spacing: 0;" VBox.vgrow="ALWAYS">
               <children>
                  <!-- Dashboard -->
                  <Button fx:id="dashboardBtn" mnemonicParsing="false" onAction="#onDashboardClick" prefWidth="280.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 15 20; -fx-border-color: transparent; -fx-cursor: hand;" text="🏠  Dashboard">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  
                  <!-- Separator -->
                  <Separator style="-fx-background-color: #4169e1 -fx-padding: 0 20;" />
                  
                  <!-- Membaca Artikel -->
                  <Button fx:id="artikelBtn" mnemonicParsing="false" onAction="#onArtikelClick" prefWidth="280.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 15 20; -fx-border-color: transparent; -fx-cursor: hand;" text="📖  Membaca Artikel">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  
                  <!-- Latihan Pernapasan (Active) -->
                  <Button fx:id="pernapasanBtn" mnemonicParsing="false" onAction="#onPernapasanClick" prefWidth="280.0" style="-fx-background-color: #1e90ff; -fx-text-fill: #87cefa; -fx-alignment: CENTER_LEFT; -fx-padding: 15 20; -fx-border-color: transparent; -fx-cursor: hand; -fx-font-weight: bold;" text="🧘  Latihan Pernapasan">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  
                  <!-- Isi Kuesioner -->
                  <Button fx:id="kuesionerBtn" mnemonicParsing="false" onAction="#onKuesionerClick" prefWidth="280.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 15 20; -fx-border-color: transparent; -fx-cursor: hand;" text="📋  Isi Kuesioner">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  
                  <!-- To Do List -->
                  <Button fx:id="todoBtn" mnemonicParsing="false" onAction="#onTodoClick" prefWidth="280.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 15 20; -fx-border-color: transparent; -fx-cursor: hand;" text="✓  To Do List">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  
                  <!-- Spacer -->
                  <Region VBox.vgrow="ALWAYS" />
                  
                  <!-- Bottom Separator -->
                  <Separator style="-fx-background-color: #1E6B6B; -fx-padding: 0 20;" />
                  
                  <!-- Profile -->
                  <Button fx:id="profileBtn" mnemonicParsing="false" onAction="#onProfileClick" prefWidth="280.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 15 20; -fx-border-color: transparent; -fx-cursor: hand;" text="👤  Profile">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   
   <center>
      <!-- Main Content Area -->
      <VBox style="-fx-background-color: #A3D5FF; -fx-padding: 30;">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="headerLabel" style="-fx-background-color: white; -fx-padding: 15 30; -fx-background-radius: 10; -fx-text-fill: #333; -fx-font-size: 18px; -fx-font-weight: bold;" text="Bersiap untuk memulai...">
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Content Area -->
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <!-- Settings Panel -->
                  <VBox alignment="TOP_LEFT" spacing="20.0">
                     <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Pengaturan:" />
                        
                        <!-- Tarik Setting -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="80" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Tarik:" />
                              <TextField fx:id="tarikField" prefWidth="60" text="4" />
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="detik" />
                           </children>
                        </HBox>
                        
                        <!-- Tahan Setting -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="80" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Tahan:" />
                              <TextField fx:id="tahanField" prefWidth="60" text="4" />
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="detik" />
                           </children>
                        </HBox>
                        
                        <!-- Hembuskan Setting -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="80" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Hembuskan:" />
                              <TextField fx:id="hembuskanField" prefWidth="60" text="4" />
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="detik" />
                           </children>
                        </HBox>
                        
                        <!-- Siklus Setting -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="80" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Siklus:" />
                              <TextField fx:id="siklusField" prefWidth="60" text="5" />
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="kali" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Breathing Circle -->
                  <VBox alignment="CENTER" spacing="20.0">
                     <children>
                        <StackPane>
                           <children>
                              <Circle fx:id="breathingCircle" fill="#4169E1" radius="100.0" stroke="#000000" strokeWidth="3.0" />
                              <Label fx:id="circleLabel" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: white;" text="0" />
                           </children>
                        </StackPane>
                        
                        <!-- Control Buttons -->
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <Button fx:id="mulaiBtn" onAction="#onMulaiClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-size: 16px; -fx-font-weight: bold;" text="Mulai" />
                              <Button fx:id="jedaBtn" onAction="#onJedaClick" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-size: 16px; -fx-font-weight: bold;" text="Jeda" />
                              <Button fx:id="resetBtn" onAction="#onResetClick" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-size: 16px; -fx-font-weight: bold;" text="Reset" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Progress Panel -->
                  <VBox alignment="TOP_LEFT" spacing="20.0">
                     <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Progress:" />
                        
                        <VBox spacing="10.0">
                           <children>
                              <Label fx:id="siklusLabel" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Siklus: 0/5" />
                              <Label fx:id="faseLabel" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Fase: Siap" />
                              <ProgressBar fx:id="progressBar" prefWidth="150.0" progress="0.0" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</fx:root>
