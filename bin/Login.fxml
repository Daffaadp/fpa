<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #E8E4F3, #9B59B6, #8E44AD);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <!-- User Avatar Circle -->
      <Circle centerX="200.0" centerY="120.0" fill="#ffffff" radius="50.0" stroke="#000000" strokeWidth="2.0">
         <effect>
            <DropShadow color="#00000030" offsetY="4.0" radius="8.0" />
         </effect>
      </Circle>
      
      <!-- Avatar Face (Simple) -->
      <Circle centerX="200.0" centerY="105.0" fill="TRANSPARENT" radius="8.0" stroke="#000000" strokeWidth="2.0" />
      <Arc centerX="200.0" centerY="135.0" fill="TRANSPARENT" length="180.0" radiusX="15.0" radiusY="10.0" startAngle="0.0" stroke="#000000" strokeWidth="2.0" type="OPEN" />
      
      <!-- Main Title -->
      <Label layoutX="120.0" layoutY="200.0" text="Login" textFill="#000000">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
         <effect>
            <DropShadow color="#00000020" offsetY="2.0" radius="4.0" />
         </effect>
      </Label>
      
      <!-- Username/Email Field -->
      <TextField fx:id="usernameField" layoutX="50.0" layoutY="270.0" prefHeight="45.0" prefWidth="300.0" promptText="Email / No. Telp" style="-fx-background-color: #ffffff; -fx-background-radius: 25; -fx-border-width: 0; -fx-padding: 15; -fx-font-size: 16;">
         <effect>
            <DropShadow color="#00000020" offsetY="3.0" radius="6.0" />
         </effect>
      </TextField>
      
      <!-- Password Field -->
      <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="330.0" prefHeight="45.0" prefWidth="300.0" promptText="Password" style="-fx-background-color: #ffffff; -fx-background-radius: 25; -fx-border-width: 0; -fx-padding: 15; -fx-font-size: 16;">
         <effect>
            <DropShadow color="#00000020" offsetY="3.0" radius="6.0" />
         </effect>
      </PasswordField>
      
      <!-- Forgot Password Link -->
      <Label layoutX="150.0" layoutY="385.0" text="Forgot Password?" textFill="#E8E4F3" underline="true">
         <font>
            <Font name="System" size="14.0" />
         </font>
      </Label>
      
      <!-- Login Button -->
      <Button fx:id="loginButton" layoutX="125.0" layoutY="420.0" onAction="#handleLogin" prefHeight="50.0" prefWidth="150.0" text="Login" textFill="#000000" style="-fx-background-color: #B19CD9; -fx-background-radius: 25; -fx-border-width: 0; -fx-cursor: hand;">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <effect>
            <DropShadow color="#00000030" offsetY="3.0" radius="8.0" />
         </effect>
      </Button>
      
      <!-- Register Text -->
      <HBox layoutX="80.0" layoutY="485.0" spacing="5.0">
         <children>
            <Label text="Don't Have an Account?" textFill="#E8E4F3">
               <font>
                  <Font name="System" size="14.0" />
               </font>
            </Label>
            <Button fx:id="registerButton" onAction="#handleRegister" text="Register" textFill="#ffffff" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-underline: true; -fx-cursor: hand;">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      
      <!-- Divider Line -->
      <Line endX="150.0" layoutX="100.0" layoutY="540.0" startX="-50.0" stroke="#E8E4F3" strokeWidth="1.0" />
      <Label layoutX="185.0" layoutY="530.0" text="Or" textFill="#E8E4F3">
         <font>
            <Font name="System" size="16.0" />
         </font>
      </Label>
      <Line endX="150.0" layoutX="250.0" layoutY="540.0" startX="0.0" stroke="#E8E4F3" strokeWidth="1.0" />
      
      <!-- Social Media Buttons -->
      <HBox layoutX="120.0" layoutY="555.0" spacing="20.0">
         <children>
            <!-- Facebook Button -->
            <Button prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #4267B2; -fx-background-radius: 25; -fx-border-width: 0; -fx-cursor: hand;" text="f" textFill="white">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <effect>
                  <DropShadow color="#00000030" offsetY="3.0" radius="6.0" />
               </effect>
            </Button>
            
            <!-- Google Button -->
            <Button prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #DB4437; -fx-background-radius: 25; -fx-border-width: 0; -fx-cursor: hand;" text="G" textFill="white">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <effect>
                  <DropShadow color="#00000030" offsetY="3.0" radius="6.0" />
               </effect>
            </Button>
            
            <!-- Apple Button -->
            <Button prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #000000; -fx-background-radius: 25; -fx-border-width: 0; -fx-cursor: hand;" text="🍎" textFill="white">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <effect>
                  <DropShadow color="#00000030" offsetY="3.0" radius="6.0" />
               </effect>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>