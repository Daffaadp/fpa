<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <Label layoutX="150.0" layoutY="50.0" text="LOGIN">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <Label layoutX="50.0" layoutY="120.0" text="Username:" />
      <TextField fx:id="usernameField" layoutX="50.0" layoutY="140.0" prefWidth="250.0" />
      
      <Label layoutX="50.0" layoutY="180.0" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="200.0" prefWidth="250.0" />
      
      <Button fx:id="loginButton" layoutX="50.0" layoutY="250.0" onAction="#handleLogin" prefWidth="100.0" text="Login" />
      <Button fx:id="registerButton" layoutX="200.0" layoutY="250.0" onAction="#handleRegister" prefWidth="100.0" text="Register" />
   </children>
</AnchorPane>